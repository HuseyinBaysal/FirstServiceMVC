
@{
    //ViewData oluşturulmazsa Null hatası verir.
    ViewData["Title"] = "Index";
}

@model List<User>


    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Kullanıcılar</h4>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Mail</th>
                                <th>Yaş</th>
                                <th>Cinsiyet</th>
                                <th>Eklenme Zamanı</th>
                                <th>Güncellenme Zamanı</th>

                                <th>Durumu</th>

                                <th>Güncelle</th>
                                <th>Sil</th>
                            </tr>                            
                        </thead>

                        <tbody>
                            @foreach (User user in Model)
                        {
                            <tr>
                                <td>@user.ID</td>
                                <td>@user.FirstName</td>
                                <td>@user.LastName</td>
                                <td>@user.EMail</td>
                                <td>@user.Age</td>
                                <td>@user.Gender</td>
                                <td>@user.CreatedDate</td>
                                <td>@user.UpdateDate</td>
                                <td>@user.Status</td>
                                <td><a class="btn btn-outline-info" asp-controller="User" asp-action="EditUser" asp-route-id="@user.ID"> Güncelle </a></td>
                                <td><a class="btn btn-outline-danger" asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.ID"> Sil </a></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                <div class="card-footer">
                    <a class="btn btn-outline-dark btn-block" asp-controller="User" asp-action="CreateUser"> Yeni Kullanıcı Ekle </a>
                </div>
            </div>
        </div>
    </div>
