@{
    ViewData["Title"] = "CreateUser";
}

@model CreateUserDTO


<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title"> Yeni Kullanıcı Ekle</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateUser">
                    <div class="form-group">
                        <label class="form-text" asp-for="FirstName"></label>
                        <input class="form-control" asp-for="FirstName" />
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-text" asp-for="LastName"></label>
                        <input class="form-control" asp-for="LastName" />
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-text" asp-for="EMail"></label>
                        <input class="form-control" asp-for="EMail" />
                        <span class="text-danger" asp-validation-for="EMail"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-text" asp-for="Age"></label>
                        <input class="form-control" asp-for="Age" />
                        <span class="text-danger" asp-validation-for="Age"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-text" asp-for="Gender"></label>
                        <input class="form-control" asp-for="Gender" />
                        <span class="text-danger" asp-validation-for="Gender"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-outline-success float-right" value="Kaydet" />
                        <a asp-controller="User" asp-action="Index"> Geri Dön </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
